<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Article Add{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        
            {% block editor %}{% endblock %}
            
            {% block articlelist %}{% endblock %}
        
        {% endblock %}
        
        {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script>
            $(function(){
                $('form[name=form]').find("input[type=text], textarea").val("");
                $('.delete').click(function(){
                       var id = this.id;
                       $.ajax({type:'post',
                            url: '/delete',               
                            data: {'id': id}, 
                            dataType: 'json',
                            headers: {'X-Requested-With': 'XMLHttpRequest'},
                            success: function(response){
                                $('#p'+response.id).remove();
                             }
                             
                
                });
                   });     
            });
        </script>
        {% endblock %}
    </body>
</html>
